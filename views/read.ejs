<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rk</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900">
    <div class="w-full bg-zinc-900 p-10 sm:h-full lg:h-[100vh]">
        <div class="flex justify-between">    
        <h1 class="text-3xl text-zinc-500 hover:text-zinc-300 cursor-pointer">All User</h1>
        <a href="/">
            <h1 class="text-3xl text-zinc-500 hover:text-zinc-300 cursor-pointer">Create User</h1>
        </a>
        </div>
        <!-- user main container -->
        <div class="users mt-10 flex gap-3 flex-wrap">
            <% if(userDetails.length > 0){%>
                
                <% userDetails.forEach((data)=>{%>
                    <!-- indiviale user div -->
                  <div class="user min-w-72 p-4 bg-zinc-700 rounded-xl">
                      <!-- image container code -->
                       <div class="img w-[250px] h-52 rounded-xl bg-zinc-400 rounded">
                          <img src="<%= data.img %>" alt="<%= data.img %>" class="w-full h-full  object-cover rounded-xl"/>
                       </div>
                       <h1 class="text-xl mt-3 tracking-tighter">
                          <%= data.userName %>
                      </h1>
                       <h5 class="text-zinc-500">
                          <%= data.email %>
                      </h5>
                       <!-- button container -->
                        <div class="flex gap-5 mt-10 justify-start items-center">
                          <a href="/update/<%= data._id %>" class="text-zinc-900 hover:text-zinc-100 hover:font-bold">
                              Edit 
                          </a>
                          <!-- delete button -->
                           <a href="/delete/<%= data._id %>" class="text-red-300 hover:font-bold hover:text-red-500">
                              Delete
                           </a>
                        </div>
                  </div>
                
                  <% }) %>

           <% } else {%>
            <h1 class="w-full text-zinc-100 text-center flex justify-center items-center text-3xl">No User Yet</h1>
          <% }%>
           
        </div>
    </div>
</body>
</html>


